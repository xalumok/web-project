<!DOCTYPE html>
<html>
    <head>
    <% include blocks/links.ejs %>
    <script src="/scripts/cart-manipulation.js"></script>
</head>
<body>

<% include blocks/menu.ejs %>

<div class = "container">    
    <% if (purchaceList === undefined || purchaceList.length == 0) { %>
        <div class = "row" style = "margin-top : 20px">
            <div class="card col-lg-12">
                <h4>Нема купівель :(</h4>
            </div>
        </div>
    <%} else {%>
        <div class="row">
            <% var price = 0; %>
            <% for (var i = 0; i< purchaceList.length; ++i) {price += purchaceList[i].price;} %>
            <div class="card col-lg-12 text-center">
                <div class="card-body">
                    <h4 class = "card-text">Сума всіх покупок: <%= Math.round(price) %> грн</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class = "card col-lg-12 text-center" style="padding: 0">
                <table>
                    <tr>
                        <th>
                            <h2>Дата покупки</h2>
                        </td>
                        <th>
                            <h2>Товар</h2>
                        </td>
                        <th>
                            <h2>Ціна покупки (грн)</h2>
                        </th>
                    </tr>
                    <% for (var i = 0; i < purchaceList.length; ++i) { %>
                        <tr>
                            <td>
                                <%=purchaceList[i].date %>
                            </td>
                            <td>
                                <%=purchaceList[i].name %>
                            </td>
                            <td>
                                <%=purchaceList[i].price %> грн
                            </td>
                        </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        <% } %>
</div>

<% include blocks/footer.ejs %>

</body>
</html>
