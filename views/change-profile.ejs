<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
    <div class="login">
        <h2>Змінити профіль</h2>
        <form method="POST" action="/change-profile">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Нікнейм</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="text" name="username" class="form-control" placeholder = "<%= username %>" value = "<%= typeof username != 'undefined' ? username : '' %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Ім'я</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="text" name="firstname" class="form-control" placeholder="<%= firstname %>" value = "<%=firstname %>" >
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Призвіще</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="text" name="lastname" class="form-control" placeholder="<%= lastname %>" value = "<%= lastname %>">
                        </div> 
                    </div>
                    <button type = "submit" class = "login-button">Змінити профіль</button> 
                </div>
            </div>
        </form>
    </div>
  
    
</div>

<% include blocks/footer.ejs %>
  
<script src="/scripts/menuScript.js"></script>
    
</body>
</html>