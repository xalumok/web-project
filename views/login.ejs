<% include blocks/menu.ejs %>

<div id="main">
    
    <div class="login">
        <h2>Увійти</h2>
        <form method="POST" action="/login">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="username" name="username" class="form-control" placeholder="нікнейм">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="пароль">
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group form-check">
                            <input type="checkbox" name="check" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Запам'ятати мене</label>
                        </div>
                        <div class = "col-lg-4 forgot-password">
                            <a href = "/forgot-password">Забули пароль?</a>
                        </div>
                        <div class = "col-lg-4 sign-up">
                            <a href = "/register">Зареєструватись!</a>
                        </div>
                    </div>
                    <button type = "submit" class = "login-button">Увійти</button> 
                </div>
            </div>
        </form>
    </div>
  
    
</div>

