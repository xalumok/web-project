<!DOCTYPE html>
<html>
<head>
    <% include blocks/links.ejs %>
</head>
<body>

<% include blocks/menu.ejs %>

<div id="main">
    
    <div class="login">
        <h2>Додати товар</h2>
        <form method="POST" action="/create-tablet">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Ім'я товару</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="text" name="name" class="form-control" placeholder="назва товару" value = "<%= typeof name != 'undefined' ? name : '' %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Бренд товару</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="text" name="brand" class="form-control" placeholder="бренд" value = "<%= typeof brand != 'undefined' ? brand : '' %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Ціна товару</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="number" name="price" class="form-control" placeholder="ціна" value = "<%= typeof price != 'undefined' ? price : 0 %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Розмір знижки</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="number" name="sale" class="form-control" placeholder="знижка" value = "<%= typeof sale != 'undefined' ? sale : 0 %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Розмір екрану</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="number" name="screen_size" class="form-control" placeholder="розмір екрану" value = "<%= typeof screen_size != 'undefined' ? screen_size : 0 %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>RAM (Гб)</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="number" name="RAM" class="form-control" placeholder="об'єм RAM" value = "<%= typeof RAM != 'undefined' ? RAM : 0 %>">
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3 form-group">
                            <a>Memory (Гб)</a>
                        </div> 
                        <div class="col-lg-9 form-group">
                            <input type="number" name="storage" class="form-control" placeholder="об'єм накопичувача" value = "<%= typeof storage != 'undefined' ? storage : 0 %>">
                        </div> 
                    </div>
                    <button type = "submit" class = "login-button">Додати товар</button> 
                </div>
            </div>
        </form>
    </div>
  
    
</div>

<% include blocks/footer.ejs %>
  
<script src="/scripts/menuScript.js"></script>
    
</body>
</html>